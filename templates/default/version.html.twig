{% extends "layout.html.twig" %}
{% block title %}Download TYPO3 {{ majorVersion.current.version }}{% endblock %}
{% block content %}

    {% include 'default/partials/key-visual.html.twig' with {
        'title': majorVersion.title ~ ' (' ~ majorVersion.current.version ~ ')',
        'subtitle': majorVersion.subtitle,
        'small': '1'
    }%}

    <div class="frame frame-small frame-default frame-background-light frame-no-backgroundimage frame-space-before-none frame-space-after-none">
        <div class="frame-container">
            <div class="frame-inner">
                <form action="">
                    <div class="row">
                        <div class="col-sm-auto">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="">{{ majorVersion.title }}</span>
                                </div>
                                <select class="form-control custom-select"
                                    onchange="if (this.value) window.location.href= '{{ path('root') }}version/' + this.value;">
                                    <option>Choose a different version</option>
                                    {% for activeVersion in activeVersions %}
                                    <option value="{{ activeVersion.version }}">{{ activeVersion.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-auto mt-2 mt-sm-0">
                            <a href="{{ path('list', {'version': majorVersion.version}) }}" class="btn btn-primary">All v{{ majorVersion.version }} Releases</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {% include 'default/partials/download-area.html.twig' with majorVersion only %}
    {% include 'default/partials/system-requirements.html.twig' with majorVersion only %}
    {% include 'default/partials/package-signatures.html.twig' with majorVersion only %}

{% endblock %}
